<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HelloWorld">

    <TextView
        android:id="@+id/bookText"
        android:text="@string/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bookTextBox"/>

    <TextView
        android:id="@+id/chapterText"
        android:text="@string/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/chapterTextBox" />

    <TextView
        android:text="@string/verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verseText"
        android:layout_above="@+id/verseTextBox"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/bookTextBox"
        android:inputType = "textCapWords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/chapterText"
        android:layout_marginBottom="90dp"/>

    <EditText
        android:id="@+id/chapterTextBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/verseText"
        android:layout_marginBottom = "90dp"/>

    <EditText
        android:id="@+id/verseTextBox"
        android:inputType = "textCapWords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="SHARE"
        android:textColor="#00F"
        android:onClick="sendMessage"/>

</RelativeLayout>
